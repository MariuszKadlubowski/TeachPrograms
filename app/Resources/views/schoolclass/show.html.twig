{% extends 'base.html.twig' %}

{% block body %}
    <h1>Schoolclass</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ schoolClass.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ schoolClass.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ schoolClass.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ schoolClass.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('schoolclass_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('schoolclass_edit', { 'id': schoolClass.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
